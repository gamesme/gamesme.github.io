<script type="text/javascript">
    (function () {
        let times = document.getElementsByTagName('time');
        if (times.length === 0) {
            return;
        }
        let posts = document.getElementsByClassName('post-body');
        if (posts.length === 0) {
            return;
        }
        let pubTime = new Date(times[0].dateTime);  /* 文章发布时间戳 */
        let now = Date.now()  /* 当前时间戳 */
        let interval = parseInt(now - pubTime)
        /* 发布时间超过指定时间（毫秒） */
        if (interval > 3600 * 24 * 30 * 1000) {
            if (times.length === 2) {
                let modTime = new Date(times[1].dateTime); /* 文章发布时间戳 */
                let interval2 = parseInt(now - modTime)
                let days = parseInt(interval / 86400000)
                let daysModify = parseInt(interval2 / 86400000)
                posts[0].innerHTML = '<div class="note" style="font-size:0.9rem">' +
                    '<p>请注意，本文编写于 ' + days + ' 天前，最后修改于 ' + daysModify + ' 天前，其中某些信息可能已经过时，请注意甄别。' +
                    '</p></div>' + posts[0].innerHTML;
            } else {
                let days = parseInt(interval / 86400000)
                posts[0].innerHTML = '<div class="note" style="font-size:0.9rem">' +
                    '<p>请注意，本文编写于 ' + days + ' 天前，其中某些信息可能已经过时，请注意甄别。' +
                    '</p></div>' + posts[0].innerHTML;
            }
        }

    })();
</script>
